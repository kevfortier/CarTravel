<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.app.cartravel.CompteModifActivity">
    
	<!-- Courriel -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:text="@string/lbl_username2"
	    	android:textSize="20sp" />
	    
	    <EditText
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/txt_username"
	        android:inputType="textEmailAddress"
	        android:gravity="center" />
	</LinearLayout>    
	        
	<!-- Confirmation courriel -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:text="@string/lbl_confirmer_username2"
	    	android:textSize="20sp" />
	    
	    <EditText
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/txt_confirmer_username"
	        android:inputType="textEmailAddress"
	        android:gravity="center" />
	</LinearLayout>   
	
	<!-- Pseudo -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:text="@string/lbl_pseudo2"
	    	android:textSize="20sp" />
	    
	  	<EditText 
	  	    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/txt_pseudo"
	        android:inputType="textCapWords"
	        android:gravity="center" />
	</LinearLayout>
	
	<!-- MDP -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:text="@string/lbl_password2"
	    	android:textSize="20sp" />
	    
	  	<EditText 
	  	    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/txt_password"
	        android:inputType="textPassword"
	        android:gravity="center" />
	</LinearLayout>
	
	<!-- Confirmer MDP -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:text="@string/lbl_confirmer_password2"
	    	android:textSize="20sp" />
	    
	  	<EditText 
	  	    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/txt_confirmer_password"
	        android:inputType="textPassword"
	        android:gravity="center" />
	</LinearLayout>
	
</LinearLayout>
